.brand-list{
  margin-top:50rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  position: relative;
  height: 500rpx;
  background: white;

}
.brand-list__header{
  width: 100%;
  height: 100rpx;
  background: url(https://kshop-pro-data.oss-cn-hangzhou.aliyuncs.com/kmh/selflist_top_brand.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.brand-list__swiper{
  height: 360rpx;
}

.brand-list__dot__list{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  bottom:16rpx; 
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
  overflow: hidden;
  height: 6rpx;
  width: fit-content;

}
.brand-list__dot__list__item{
  width: 24rpx;
  height: 6rpx;
  background: rgba(246, 27, 109, 1);
  opacity: 0.5;
  transition: ease all 0.3s;
  overflow: hidden;
}
.brand-list__dot__list__item--active{
  opacity: 1;

}

.brand-list__item__list{
 display: flex;
 width: 100%;
 flex-wrap: wrap;
 height: 100%; 
}

.brand-list__item__cell{

  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
  height: fit-content;

}
.brand-list__item__cell__icon{
  margin-top: 30rpx;
  width: 100rpx;
  height: 100rpx;
}
.brand-list__item__cell__title{
  margin-top: 10rpx;
  font-size: 22rpx;
  height: 33rpx;
  line-height: 33rpx;
  color: rgba(51, 51, 51, 1);
  max-width: 100rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  text-align: center;
}