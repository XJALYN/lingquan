.vip-card{
  width: 100%;
  height:395rpx;
  position: relative;
   background: url("https://kshop-pro-data.oss-cn-hangzhou.aliyuncs.com/kmh/homeVipCardBg.png");
  background-size: 100% 342rpx;
  background-repeat: no-repeat;
}

.vip-card__content{
  height:380rpx;
  margin-top: 30rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  background:rgba(0,0,0,0);
  background: url("https://kshop-pro-data.oss-cn-hangzhou.aliyuncs.com/kmh/homeCard.png?x-oss-process=style/userCard");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  /* box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.5); */
}

.vip-card__top{
 margin-top: 40rpx;
 /* display: flex;
 align-items: flex-end; */
 width: 100%;
 background: rgba(0,0,0,0)
}
.vip-card__name{
  float: left;
 margin-left: 50rpx;
 font-size: 36rpx;
 line-height: 36rpx;
 height: 36rpx;
 max-width: 250rpx;
 color: #DFDFDF;
 font-weight: bold;
 overflow: hidden;
 text-overflow: ellipsis;
 display: -webkit-box;
 -webkit-box-orient: vertical;
 white-space: nowrap;
 -webkit-line-clamp: 1;
 
}
.vip-card__price{
  margin-left: 16rpx;
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  color: #999999;
  flex:1;
  width: fit-content;
  float: left;
  margin-top:96rpx;
  
}
.vip-card__price text:nth-child(1){
  font-size: 24rpx;
  color: #999;
}
.vip-card__price text:nth-child(2){
  font-size: 24rpx;
  color: #DFDFDF;
}
.vip-card__price text:nth-child(3){
  font-size:48rpx;
  color: #DFDFDF;
}
.vip-card__price__value{
  color: #fae7ce;
  
}
.vip-card__status{
  margin-right: 50rpx;
  font-size: 20rpx;
  color: #DFDFDF;
  font-weight: 500;
  width:108rpx;
  height:40rpx;
  border-radius: 22rpx;
  text-align: center;
  line-height:40rpx;
  border:2rpx solid #212121;
  float: right;
}
.vip-card__mid{
  width: 250rpx;
  float: left;
  margin-top: 86rpx;
  display: flex;
  align-items: flex-end;
  height: 48rpx;
  background: rgba(0,0,0,0)
}
.vip-card__mid__title{
  margin-left: 50rpx;
  color: #999999;
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  margin-bottom: 5rpx;
}
.vip-card__mid__value{
  margin-left: 16rpx;
  color: #DFDFDF;
  font-size: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-weight: 500;
}
.vip-card__bottom{
  margin-top:20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  background: rgba(0,0,0,0)
}
.vip-card__bottom__num{
  margin-left: 50rpx;
  color: #DFDFDF;
  font-size: 32rpx;
  flex:1;
  font-weight:bold;
  margin-top:15rpx;
  padding-top:18rpx;
}
.vip-card__bottom__btn{
 width:206rpx;
 height:60rpx;
 background:linear-gradient(360deg,rgba(222,179,128,1) 0%,rgba(228,216,178,1) 100%);
 border-radius:30px;
 color: #53350A;
 font-size: 24rpx;
 text-align: center;
 line-height: 60rpx;
 margin-right: 50rpx;
 font-weight: 500;
}
.vipClass{padding: 0 14rpx;height: 40rpx;float: left;margin-left: 11rpx;border-radius: 20rpx;position: relative;}
.vipClass image{display:block;height:40rpx; }
.vipIco{display: block;width:24rpx;height: 23rpx;background-size: 100% 100%;position: absolute;left:12rpx;top: 7rpx; }
