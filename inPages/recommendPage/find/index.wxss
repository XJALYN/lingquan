.find{
  margin-top:50rpx;
}

.find__top{
  height: 56rpx;
  display: flex;
  width: 100%;
  align-items: flex-end;
}
.find__title{
  margin-left: 32rpx;
 color:#333333;
 font-size: 40rpx;
 font-weight: bold;
 flex:1;
}
.find__subtitle{
 color: #999;
 font-size: 28rpx;
 margin-right: 9rpx;
 height: 28rpx;
 line-height: 28rpx;
 margin-bottom: 8rpx;
}
.find__icon{
  width: 12rpx;
  height: 24rpx;
  line-height: 24rpx;
  margin-right: 32rpx;
  color: #999;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.find__list{
  margin-top: 20rpx;
  width: 100vw;
  align-items: center;
  height: 390rpx;
 white-space: nowrap;
 display: flex;
}
.find__list__item{
  display: inline-block;
  width: 310rpx;
  height: 390rpx;
  /* background: white; */
  margin-right: 20rpx;
  border-radius: 10rpx;
  background:url("https://kshop-pro-data.oss-cn-hangzhou.aliyuncs.com/kmh/findPeople.png");
  
}
.find__list__item:first-child {
  margin-left: 32rpx;
}
.find__list__item:last-child{
   margin-right: 32rpx;
}
.find__cell{
  width: 310rpx;
  height: 350rpx;
  align-items: center;
  background:url("https://kshop-pro-data.oss-cn-hangzhou.aliyuncs.com/kmh/findPeople.png");
  background-size: 100% 100%;
  border-radius: 10rpx;padding-top:40rpx;
  
}


.find__cell__icon{
  margin: 0 auto;
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #eee;
}
.find__cell__name{
  margin-top:20rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  color: #333333;
  font-weight: bold;
  font-size: 30rpx;
}
.find__cell__rank{
  margin-top:8rpx;
  height: 33rpx;
  line-height: 33rpx;
  color: #F61B6D;
  font-size: 24rpx;
  text-align: center;
}
.find__cell__btn{
  margin:53rpx auto 40rpx auto;
  width: 170rpx;
  height:60rpx;
  border-radius:30rpx;
  text-align: center;
  line-height:60rpx;
  background-color: #F61B6D;
  font-size: 24rpx;
  color: #FFFFFF;

}