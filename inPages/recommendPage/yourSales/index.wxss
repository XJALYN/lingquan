.your-sales{
 margin-top: 51rpx;
}
.your-sales__top{
  height: 56rpx;
  display: flex;
  width: 100%;
  align-items: flex-end;
}
.your-sales__title{
  margin-left: 32rpx;
 color:#333333;
 font-size: 40rpx;
 font-weight: bold;
 flex:1;
 word-break: break-all;
}
.your-sales__subtitle{
 color: #999;
 font-size: 28rpx;
 margin-right: 9rpx;
 height: 28rpx;
 line-height: 28rpx;
 margin-bottom: 8rpx;
}
.your-sales__icon{
  width: 12rpx;
  height: 24rpx;
  line-height: 24rpx;
  margin-right: 32rpx;
  color: #999;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.your-sales__list{
 width: calc(100% - 64rpx);
 margin-left: 32rpx;
 display: flex;
 flex-direction: column;


}
.your-sales__list__item{
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  height: 292rpx;
  position: relative;
  background: white;
  border-radius: 10rpx;
  align-items: center;
}
.your-sales__item__image{
  width:230rpx;
  min-width: 230rpx;
  height: 230rpx;
  border-radius: 10rpx; 
  background: #eee;
  margin-left:30rpx;
}
.your-sales__item__right{
  margin-left: 29rpx;
  height: 100%;

}
.your-sales__item__right__title{
  margin-top: 40rpx;
  color: #020202;
  font-weight:bold;
  font-size:28rpx;
  margin-right: 30rpx;

}
.your-sales__item__right__vip{
 margin-top: 20rpx;
 height: 40rpx;
 text-align: center;
 line-height: 40rpx;
 border-radius: 20rpx;
 border: 2rpx solid #DEB380;
 color: #DEB380;
 width: auto;
 font-size: 22rpx;
 display:line-block;
 padding:0 5rpx;
}
.your-sales__list__item__price{
  position: absolute;
  right: 30rpx;
  bottom: 35rpx;
 
  display: flex;
  align-items: center;
  
}
.your-sales__list__item__price__icon{
  margin-right: 16rpx;
  width: 157rpx;
  height: 40rpx; 
}
.your-sales__list__item__price__icon-1{
 margin-right: 16rpx;
  width: 178rpx;
  height: 40rpx; 
}
.your-sales__list__item__price__value{
  color: #F61B6D;
  font-size: 36rpx;
  font-weight: bold;
}
.your-sales__list__item__price__value text{
  font-size:28rpx; 
}
.your-sales__list__item__bid__price{
  color: #8C8C8C;
  font-size: 28rpx;
  margin-left: 14rpx;
  text-decoration:line-through;
  font-weight: normal;
  padding-top: 2rpx;
}
.your-sales__list__item__line{
  position: absolute;
  bottom: 0;
  border-bottom: 2rpx solid #999999;
  right: 0;
  left: 0;
}