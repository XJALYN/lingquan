.free-get{
 margin-top: 50rpx;
}
.free-get__top{
  height: 56rpx;
  display: flex;
  width: 100%;
  align-items: flex-end;
  

}
.free-get__title{
  margin-left: 32rpx;
 color:#333333;
 font-size: 40rpx;
 font-weight: bold;
 flex:1;
 word-break: break-all;
}
.free-get__subtitle{
 color: #999;
 font-size: 28rpx;
 margin-right: 9rpx;
 height: 28rpx;
 line-height: 28rpx;
 margin-bottom: 8rpx;
}
.free-get__icon{
  width: 12rpx;
  height: 24rpx;
  line-height: 24rpx;
  margin-right: 32rpx;
  color: #999;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.free-get__list{
 width: 100%;

 white-space: nowrap; display: flex;
}

.free-get__list view:nth-child(1) {
  margin-left:32rpx;
}
.free-get__list__item{
  margin-top: 20rpx;
  display: inline-block;
  width: 360rpx;
  margin-right: 20rpx;
  background: white;
  background-color: white;
  border-radius: 10rpx;
}
.free-get__item__image{
 width: 360rpx;
 height: 360rpx;
 border-top-right-radius:10rpx; 
 border-top-left-radius:10rpx; 
 background: #eee;
}
.free-get__item__title{
  margin-top: 20rpx;
  margin-left: 20rpx;
  height: 68rpx;
  width: calc(100% - 40rpx);
  color: #020202;
  font-size: 28rpx;

  line-height: 34rpx;
  display:-webkit-box; 
-webkit-box-orient:vertical;
-webkit-line-clamp:2; 
overflow:hidden; 
text-overflow:ellipsis;
white-space: normal;
}
.free-get__item__bottom{
  display: flex;
  align-items: center;
  margin-top: 18rpx;
  margin-left: 20rpx;
  margin-right: 18rpx;
  margin-bottom: 26rpx;
}
.free-get__item__bottom__icon{
  width: 20rpx;
  height: 20rpx;
}
.free-get__item__bottom__price1{
  margin-left: 8rpx;
  color: #F61B6D;
  font-size: 28rpx;
  font-weight:bold;
}
.free-get__item__bottom__price1 text{
  font-size: 24rpx;
}
.free-get__item__bottom__price2{
  margin-left: 8rpx;
  color: #999999;
  font-size: 20rpx;
  text-decoration:line-through;
  padding-top: 2rpx;
}
.free-get__item__bottom__right{
 color: #999999;
 font-size: 20rpx;
 text-align: right;
 flex:1;
}
.free-get__item__number{
 color: #F61B6D;
}