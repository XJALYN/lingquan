.first-rebate {
  margin-top:50rpx;
}

.first-rebate__top {
  display: flex;
  width: 100%;
  align-items: flex-end;
}

.first-rebate__list {
  margin-top: 20rpx;
  white-space: nowrap;
  display: flex;
  /* width:calc(100% - 64rpx);
  margin-left: 32rpx; */
  width: 100%;
}



.first-rebate__list__item {
  position: relative;
  overflow: hidden;
  background: white;
  border-radius: 10rpx;
  display: inline-block;
  margin-right: 20rpx;
  width: 218rpx;
}

.first-rebate__list__item:first-child{
  margin-left: 32rpx;
}


.first-rebate__list__item__corner__mark {
  position: absolute;
  width: 133rpx;
  height: 106rpx;
  border-top-left-radius: 10rpx;
}

.first-rebate__top__title {
  color: #333;
  font-size: 40rpx;
  margin-left: 32rpx;
  flex: 1;
  font-weight: bold;
}

.first-rebate__top__subtitle {
  color: #999;
  font-size: 24rpx;
  margin-right: 32rpx;
}

.list {
  margin-top: 12rpx;
  overflow: scroll;
  width: calc(100% - 64rpx);
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.first-rebate__list__item__image {
  width: 218rpx;
  height: 218rpx;
  background: #eee;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.first-rebate__list__item__title {
  height: 66rpx;
  line-height: 33rpx;
  width: calc(100% - 32rpx);
  font-size: 24rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  margin-left: 16rpx;
  margin-right: 16rpx;
}

.first-rebate__list__item__bottom {
  display: flex;
  width: 100%;
  align-items: center;
  height:45rpx;
  padding:10rpx 0 20rpx 0;
 
}

.first-rebate__list__item__price {
  margin-top: 10rpx;
  color: #f61b6d;
  font-size: 22rpx;
  margin-left: 16rpx;
}

.first-rebate__list__item__price__value {
  color: #f61b6d;
  font-size:28rpx;
  margin-top: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  flex: 1;
  font-weight: bold
}

.first-rebate__list__item__bid__price {
  margin-left: 10rpx;
  width: 72rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 18rpx;
  color: #c49c6c;
  border-radius: 15px;
  border: 1rpx solid rgba(196, 156, 108, 1);
  margin-right:16rpx;
  margin-top: 8rpx;
}
