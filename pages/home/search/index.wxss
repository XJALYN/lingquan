.search{
 padding-top: 20rpx;
 height: 70rpx;
 width: 100%;
 display: flex;
 align-items: center;
 background: white;
 padding-bottom: 20rpx;
}
.search-left{
  margin-left: 32rpx;
  height: 70rpx;
  width: 627rpx;
  display: flex;
  align-items: center;
  background-color: rgba(246,246,246,1);
  border-radius: 35rpx;
  flex:1;

}
.search__icon{
  margin-left: 32rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 32rpx;
  color:#333333;
}
.search__input{
  margin-left: 17rpx;
  flex:1;
  height: 70rpx;
  font-size: 28rpx;
  padding-top: 5rpx;
  width: 500rpx;
}
.search__input::placeholder{
  color: #A3A3A3;
}
.search__right{
  margin-right: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 23rpx;
  margin-top:10rpx;
}
.search__right__icon{
  width: 32rpx;
  height: 32rpx;
}
.search__right__title{
  margin-top: 6rpx;
 font-size: 18rpx;
 color: #000000;
 height: 25rpx;
 line-height: 25rpx;
}