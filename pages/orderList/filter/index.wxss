.filter-list{
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  height: 82rpx;
  line-height: 82rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  background: white;
  z-index: 10;
}
.filter-list__item{
  
  color: #333333;

  display: flex;
  flex-direction: column;
  align-items: center;
}
.filter-list__item--active{
  color: #333333;
  font-size: 28rpx;

}
.filter__item__title{
  margin-top: 20rpx;
  font-size:28rpx;
   height: 40rpx;
  line-height: 40rpx;
}
.filter__item__line{
  margin-top: 21rpx;
  width: 0rpx;
  height: 6rpx;
  transition: ease all .2s;
  
}
.filter__item__line--active{
  background-color: #F61B6D;
   width: 46rpx;
}