.menu{
  border-top: 20rpx white solid;
  width: 100%;
  overflow: scroll;
  white-space: nowrap;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: sticky;
  top: 0;
  z-index: 10;
  background: white;

}
.menu__item{
  display: inline-block;
  margin-left:75rpx;
  margin-right: 60rpx;
  color: #333333;
  font-size: 32rpx;
  height: 72rpx;
  line-height: 72rpx;
  position: relative;
}
.menu__item__lighthigh{
  width:116rpx;
  height:54rpx;
  line-height: 54rpx;
  text-align: center;
  color: white;
  background:linear-gradient(146deg,rgba(255,202,224,1) 0%,rgba(250,59,123,1) 100%);
  border-radius:27rpx;
  font-weight: normal;
  font-size: 28rpx;
 
}
.menu__item--active{
  font-size: 32rpx;
  font-weight: bold;
}


.menu__item__line{
  position: absolute;
  width: 100%;
  height: 6rpx;
  bottom:0;
  background-color: #F61B6D;
  left: 50%;
  transform: translateX(-50%);
  /* animation: ease 0.5s menu__line-big ; */
}

