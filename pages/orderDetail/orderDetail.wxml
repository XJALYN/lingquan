<!--pages/orderDetail/orderDetail.wxml-->
<view class='orderDetail' hidden="{{orderDetailType}}">
    <!-- 待付款 -->
    <view class='orderWait' wx:if="{{checkoutOrderDetailData.orderState==20}}">
        <view class='orderWname'>
            <view class='owIco iconfont icondaifukuan'></view>
            <text>{{checkoutOrderDetailData.orderStateText}}</text>
        </view>
        <view class='owHint'>订单已提交，请在下单后15分钟内支付，超时将自动取消</view>
    </view>
    <!-- 待发货 -->
     <view class='orderWait' wx:if="{{checkoutOrderDetailData.orderState==30}}">
        <view class='orderWname'>
            <view class='owIco iconfont icondaifahuo1'></view>
            <text>{{checkoutOrderDetailData.orderStateText}}</text>
        </view>
        <view class='owHint'>卖家正在为您准备商品，请耐心等待哦～</view>
    </view>
    <view class='orderAdress'>
        <view  class='odType' wx:if="{{checkoutOrderDetailData.orderState==60 || checkoutOrderDetailData.orderState==70 || checkoutOrderDetailData.orderState==80}}">
            <text>订单号：{{checkoutOrderDetailData.checkoutOrderCode}}</text>
            <text>{{checkoutOrderDetailData.orderStateText}}</text>
        </view>
        <view class='odTlist'>
        <!-- 待收货 -->
            <view class='odtlOne' wx:if="{{checkoutOrderDetailData.orderState==60 && checkoutOrderDetailData.logisticsNum}}" bindtap="gologisticsTracking">
                <view class='odtLico'>
                    <icon size='20' class='iconfont iconwuliu'></icon>
                </view>
                <view class='odtMes'>
                    <text style='padding-top:20rpx;height:auto'>您的订单已发货，请注意查收</text>
                    <text>{{checkoutOrderDetailData.deliveryDate}}</text>
                </view>
                <icon class='iconfont iconyoujiantou odtlOnext'></icon>
            </view>
            <!-- 已完成和已收货 -->
             <view class='odtlOne' wx:if="{{(checkoutOrderDetailData.orderState==70 || checkoutOrderDetailData.orderState==80) && checkoutOrderDetailData.logisticsNum}}" bindtap="gologisticsTracking">
                <view class='odtLico'>
                    <icon size='20' class='iconfont iconwuliu'></icon>
                </view>
                <view class='odtMes'>
                    <text>您的订单已签收，感谢您在本店购物，欢迎再次光临</text>
                    <text>{{checkoutOrderDetailData.deliveryDate}}</text>
                </view>
                <icon class='iconfont iconyoujiantou odtlOnext'></icon>
            </view>
            <view  class='odtlTwo'>
                <view class='odTlico'>
                    <icon size='20' class='iconfont icondizhi'></icon>
                </view>
                <view class='odtMess'>
                  <text>{{checkoutOrderDetailData.consigneeName}}\t\t{{checkoutOrderDetailData.consigneePhone}}</text>
                  <text>{{checkoutOrderDetailData.consigneeProvince}}{{checkoutOrderDetailData.consigneeCity}}{{checkoutOrderDetailData.consigneeDistrict}}{{checkoutOrderDetailData.consigneeDetailAddress}}</text>
                </view>
            </view>
        </view>
    </view>
    <view class='odshopList'>
      <view class="odsName">
          <view class='shopNameIco iconfont iconziying1'></view>
          <view class='odsNames'>鲲美自营</view>
          <button class="serciceModule" open-type="contact" bindcontact="handleContact">
              <view class="serviceName">联系客服</view>
              <view class='serviceIco iconfont iconkefu'></view>
          </button>
          
      </view> 
      
      <view class='odsList'>
          <view class='odslLi' bindtap="onGoCommdetail" data-index="{{index}}"  wx:for="{{checkoutOrderDetailData.productItemList}}">
            <image src='{{item.prodUrl}}'></image>
            <view class='odsMes'>
                <text class='text-clamp'>{{item.prodName}}</text>
                <text></text>
            </view>
            <view class='odsPrice'>
              <text>￥{{item.price}}</text>
              <text>x{{item.prodNum}}</text>
            </view>
          </view>
          <view class='odslPrice'>
              <text>￥{{checkoutOrderDetailData.amountOrder}}</text>
              <text>商品小计：</text>
          </view>
      </view>
    </view>
    <view class='owBtn'  wx:if="{{checkoutOrderDetailData.orderState==20}}">
      <view bindtap="orderSubmit">付款</view>
      <view bindtap="onclickOrderCancel">取消订单</view>
    </view>

    <!-- 已支付 -->
   <view>
      <view class='favourableList'>
        <view wx:if="{{checkoutOrderDetailData.orderType!=3}}">
            <text>优惠券：</text>
            <text wx:if="{{checkoutOrderDetailData.fullReduction==0}}">￥{{checkoutOrderDetailData.fullReduction}}</text>
           <text wx:else>-￥{{checkoutOrderDetailData.fullReduction}}</text>
        </view>
        <view wx:if="{{checkoutOrderDetailData.orderType==3}}">
            <text>活动优惠：</text>
            <text wx:if="{{checkoutOrderDetailData.amountHelpDeduction==0}}">￥{{checkoutOrderDetailData.amountHelpDeduction}}</text>
           <text wx:else>-￥{{checkoutOrderDetailData.amountHelpDeduction}}</text>
        </view>
        
        <view>
            <text>运费：</text>
            <text>￥{{checkoutOrderDetailData.amountFreight}}</text>
        </view>
        <view>
            <text>运费优惠：</text>
            <text wx:if="{{checkoutOrderDetailData.preferentialAmount==0}}">￥{{checkoutOrderDetailData.preferentialAmount}}</text>
            <text wx:else>-￥{{checkoutOrderDetailData.preferentialAmount}}</text>
        </view>
        <view>
            <text>余额抵扣：</text>
            <text wx:if="{{checkoutOrderDetailData.amountRemainder==0}}">￥{{checkoutOrderDetailData.amountRemainder}}</text>
            <text wx:else>-￥{{checkoutOrderDetailData.amountRemainder}}</text>
        </view>
        <view>
            <text>合计：</text>
            <text>￥{{checkoutOrderDetailData.amountPayable}}</text>
        </view>
    </view>
</view>
    <!-- 待支付 -->
        <view class='favourableList' wx:if="{{checkoutOrderDetailData.orderState==20 || checkoutOrderDetailData.orderState==30 ||checkoutOrderDetailData.orderState==60 ||checkoutOrderDetailData.orderState==70 || checkoutOrderDetailData.orderState==80||checkoutOrderDetailData.orderState==1}}">
            <view>
                <text>发票：</text>
                <text>{{checkoutOrderDetailData.invoiceContent}}</text>
            </view>
            <view>
                <text>买家留言：</text>
                <text>{{checkoutOrderDetailData.buyerRemark}}</text>
            </view>
        </view>

        <view class='favourableList' wx:if="{{checkoutOrderDetailData.orderState==20 || checkoutOrderDetailData.orderState==30||checkoutOrderDetailData.orderState==1}}">
            <view>
                <text>订单编号：</text>
                <text>{{checkoutOrderDetailData.checkoutOrderCode}}</text>
            </view>
            <view>
                <text>下单时间：</text>
                <text>{{checkoutOrderDetailData.orderDate}}</text>
            </view>
        </view>
        <view class='blank110' wx:if="{{checkoutOrderDetailData.orderState==20}}"></view>
        
  <view wx:if="{{checkoutOrderDetailData.orderState==60 || checkoutOrderDetailData.orderState==70 || checkoutOrderDetailData.orderState==80}}">
    <view class='favourableList'>
        <view>
                <text>付款方式：</text>
                <text>{{checkoutOrderDetailData.payWay}}</text>
            </view>
            <view>
                <text>支付状态：</text>
                <text>{{checkoutOrderDetailData.payStatusText}}</text>
            </view>
            <view>
                <text>下单时间：</text>
                <text>{{checkoutOrderDetailData.orderDate}}</text>
            </view>
            <view>
                <text>付款时间：</text>
                <text>{{checkoutOrderDetailData.payDate}}</text>
            </view>
            <view>
                <text>发货时间：</text>
                <text>{{checkoutOrderDetailData.deliveryDate}}</text>
            </view>
        </view>

   </view>
    <view class='blank110' wx:if="checkoutOrderDetailData.orderState==60 ||checkoutOrderDetailData.orderState==70}}"></view>
    <view class='owBtn'  wx:if="{{checkoutOrderDetailData.orderState==60}}">
      <view bindtap="orderSubmit" bindtap="omclickSure">确定收货</view>
      <view wx:if="{{checkoutOrderDetailData.flag}}" bindtap="onPushToAfterSaleApplay">申请售后</view>
    </view>
    <view class='owBtn'  wx:if="{{(checkoutOrderDetailData.orderState==30 || checkoutOrderDetailData.orderState==70)&&checkoutOrderDetailData.flag}}">
      <view class="orderSh" bindtap="onPushToAfterSaleApplay">申请售后</view>
    </view>
    

</view>
<kc-author-modal show="{{needAuthor}}"/>

<!--  -->

<kc-back-home />





