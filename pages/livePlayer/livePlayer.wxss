/* pages/livePlayer/livePlayer.wxss */
@import "./goods/index";
.page{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.live-player{
  width: 750rpx;
  height: 100vh;
  z-index: -1;
}

.mask{
  position: absolute;
  top:0;
  z-index: 100;
  left: 0;
  right: 0;
}

.user{
  margin-top: 48rpx;
  color: white;
  position: relative;
  display: flex;
  align-items: center;
}

.user__image{
  margin-left: 31rpx;
  width: 70rpx;
  height: 70rpx;
}

.user__right{
 margin-left: 17rpx;
}

.user__title{
  height: 24rpx;
  color: white;
  font-size: 24rpx;
  line-height: 24rpx;
}

.user__num{
 margin-top: 10rpx;
 left: 117rpx;
 color: #333;
 font-size: 22rpx;
 height: 30rpx;
 line-height: 30rpx;
}

.danmu-list{
  position:absolute;
  bottom: 154rpx;
  left: 32rpx;
  right: 32rpx;
  width: calc(100% - 64rpx);
  z-index: 100;
  height: 284rpx;
}

.danmu-cell{
  margin-top: 13rpx;
  width: 100%;
  height: 24rpx;
  display: flex;
  align-items: center;
}
.danmu-cell__name{
  color: #82D8F3;
  font-size: 26rpx;
}
.danmu-cell__text{
  margin-left: 20rpx;
  color: white;
  font-size: 26rpx;
}

.footer{
  position:absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  z-index: 100;
}
.footer__icon{
 width: 80rpx;
 height: 88rpx;
 margin-left: 32rpx;
}
.footer__input{
  position: fixed;
  left: 133rpx;
  bottom: 0;
  flex:1;
  color: white;
  font-size: 28rpx;
  height: 100rpx;
  width: 300rpx;
  line-height: 100rpx;
  z-index: 101;
}
.footer__transpond{
 width: 54rpx;
 height: 52rpx;
}
.footer__like{
 margin-left: 58rpx;
 width: 52rpx;
 height: 45rpx;
 margin-right: 32rpx;
}
