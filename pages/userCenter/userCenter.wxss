/* pages/userCenter/userCenter.wxss */
@import "./header/index";
@import "./orderList/index";
.content-top{
  margin-top: 150rpx;
  height: 63rpx;
  width: 750rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.content{
  padding-top: 30rpx;
  background: #f5f5f5;
  padding-bottom: 20rpx;

}
.order-content{
  width: calc(100vw - 64rpx);
  background: white;
  border-radius: 10rpx;
  margin-left: 32rpx;
}

.item{
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom:1rpx solid #E8E8E8;
  
}

.item__title{
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #333333;
  flex:1;
  font-weight: bold;
}

.item__arrow{
  width: 25rpx;
  height: 25rpx;
  font-size: 25rpx;
  color: #999999;
  margin-right: 20rpx;
}



.tools{
 margin-top: 20rpx;
 margin-left: 32rpx;
 width: 686rpx;
 background: white;
 border-radius: 10rpx;
 display: flex;
 flex-direction: column;
}
.tools__title{
 margin-top: 30rpx;
 margin-left: 32rpx;
 font-size: 30rpx;
 font-weight: bold;
}
.tools__list{
 display: flex;
 align-items: center;
 justify-content: flex-start;
 padding-bottom: 30rpx;
 flex-wrap: wrap;

}
.tools__list__item{
 margin-top: 40rpx;
 display: flex;
 flex-direction: column;
 align-items: center;
 margin-right: 39rpx;
 margin-left: 39rpx;
}
.tools__list__item__icon{
 width: 94rpx;
 height: 94rpx;
 border-radius: 47rpx;


}
.tools__list__item__title{
  margin-top: 15rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #666666;
  font-size: 22rpx;
}
.more-list{
  margin-top: 20rpx;
 width: 656rpx;
 background: white;
 border-radius: 10rpx;
 display: flex;
 flex-direction: column;
 padding: 0 0 0 30rpx;
 margin-left: 30rpx;
}
.more-list__item{
 display: flex;
 align-items: center;
 height: 110rpx;
 border-bottom: 1rpx solid #e8e8e8

}
.more-list view:last-child{border-bottom:none}
.more-list__item__title{
 color:#333333;
 font-size: 30rpx;
 font-weight: 500;
 flex:1;
 padding-top:8rpx;
}
.more-list__item__arrow{
 height: 25rpx;
 width: 25rpx;
 font-size: 25rpx;
 color: #999999;
 margin-right: 30rpx;
}
.more-list__line{
 margin-left: 32rpx;
 width: calc(100% - 32rpx);
 height: 1rpx;
 background:#E8E8E8;
}
.goodsList-header{
 margin-top: 60rpx;
 display: flex;
 align-items: center;
 justify-content: center;
 width: 100%;
 
}
.goodsList-header__line{
 width: 68rpx;
 height: 2rpx;
 background: #D8D8D8;
}
.goodsList-header__text{
 height: 42rpx;
 line-height: 42rpx;
  width: 160rpx;
  font-size: 30rpx;
  text-align: center;
  margin-left: 20rx;
  margin-right:0rpx;
}
.goods-list{
  margin-top: 40rpx;
  margin-left: 32rpx;
  width: calc(100% - 64rpx);
  margin-right: 32rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  overflow: hidden;
  margin-bottom: 40rpx;
 background-color: #F5F5F5;
}
.goods-list__item{
  border-radius: 10rpx;
  background: white;
  display: flex;
  flex-direction: column;
  width: 334rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.goods-list__item__icon{
  height: 334rpx;
  width: 334rpx;
  background: #eee;
}
.goods-list__item__status{
  position: absolute;
  top: 174rpx;
  left: 0;
  right: 0;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  background-color: rgba(0,0,0,0.5);
}

.goods-list__item__title{
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  color: #333333;
  font-size: 26rpx;
  height: 74rpx;

}
.goods-list__item__footer{
  margin-top: 31rpx;
  margin-bottom: 31rpx;
 width: 100%;
 display: flex;
 align-items: center;
 
}
.goods-list__item__footer__units{
 font-size: 22rpx;
 margin-left: 24rpx;
 color: #F61B6D;
 height: 22rpx;
 line-height: 22rpx;
 
}
.goods-list__item__footer__price{
 font-size: 36rpx;
 margin-left: 4rpx;
 color: #F61B6D;
 height: 36rpx;
 line-height: 36rpx;
}
.goods-list__item__footer__big__price{
  margin-left: 8rpx;
  color: #999999;
  font-size: 20rpx;
  text-decoration:line-through;
}
.goods-list__item__footer__number{
 color: #999999;
 font-size: 24rpx;
 flex:1;
 text-align: right;
 margin-right: 24rpx;
}

.more-list__item__status{
  font-size: 24rpx;
  color: #666666;
}