.order-content__list{
 margin-top: 47rpx;
 padding-left: 30rpx;
 padding-right: 30rpx;
 width: 100%;
 box-sizing: border-box;
 display: flex;
 flex-direction: row;
 align-items: center;
 justify-content: space-between;
 
}
.order-content__list__item{
 display: flex;
 flex-direction: column;
 align-items: center;
 margin-bottom: 40rpx;
}
.order-content__list__item__icon{
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 44rpx;

  color: #666666;
  position: relative;
  padding-left:11rpx;
}
.order-content__list__item__title{
 margin-top: 20rpx;
 color: #666666;
 font-size: 24rpx;
 height: 24rpx;
 line-height: 24rpx;
}
.order-content__list__item__num{
 position: absolute;
 top: -14rpx;
 right: 0;
 height: 28rpx;
 min-width: 28rpx;
 padding-left: 2rpx;
 padding-right: 2rpx;
 background-color: #F61B6D;
 color: white;
 font-size: 20rpx;
 text-align: center;
 line-height: 28rpx;
 border-radius: 14rpx;
 transform: translateX(50%);
}