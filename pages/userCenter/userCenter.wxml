<!--pages/userCenter/userCenter.wxml-->
<import src="./header/index" />
<import src="./orderList/index" />

<kc-author-userinfo bindsuccess="onAuthorSuccess" wx:if="{{userType != 2}}"/>
<view class="animated fadeIn">
<template is="header" data="{{...userInfo}}"/>
 <view class="content-top"></view>
<view class="content">
 
  <view class="order-content">
   <view class="item" data-index='0' catchtap='onPushToOrderList'>
    <view class="item__title">我的订单</view>
    <view class="item__arrow iconfont iconyoujiantou"></view>
   </view>
   <template is="orderList" data="{{...orderStatusNums}}"/>
  </view>


  <!-- 工具 -->
  <view class="tools">
    <view class="tools__title">必备工具</view>
    <view class="tools__list">
      <button class="tools__list__item" wx:for="{{list}}" wx:key="{{index}}" plain style='border:none;padding:0 0' open-type='{{item.openType}}' bindtap='onPushToTools' data-index='{{index}}'>
        <image class="tools__list__item__icon" src="{{item.src}}"></image>
        <view class="tools__list__item__title">{{item.name}}</view>
      </button>
    </view>
  </view>

  <!-- 我的会员卡 -->
  <view class="more-list">
    <!-- 我的劵 -->
    <view class="more-list__item" bindtap='onPushToMyCoupon'>
     <view class="more-list__item__title">我的券</view>
     <view class="more-list__item__arrow iconfont iconyoujiantou"></view>
    </view>

    <!-- 我的会员卡 -->
    <view class="more-list__item" bindtap='onPushToVipBuyRecord'>
     <view class="more-list__item__title">我的会员卡</view>
     <view class="more-list__item__arrow iconfont iconyoujiantou"></view>
    </view>

    <!-- 我的分享金 -->
    <view class="more-list__item" bindtap='onPushToShareMoney'>
     <view class="more-list__item__title">我的分享金</view>
     <view class="more-list__item__arrow iconfont iconyoujiantou"></view>
    </view>
  </view>


  <!-- 猜你喜欢 -->
  <view class="goodsList-header" wx:if="{{goodsList.length > 0}}">
   <view class="goodsList-header__line"></view>
    <view class="goodsList-header__text">猜你喜欢</view>
   <view class="goodsList-header__line"></view>
  </view>

  <!-- 商品列表 -->
  <view class="goods-list">
    <view class="goods-list__item" wx:for="{{goodsList}}" wx:key="{{index}}" bindtap='onPushToGoodsDetail' data-prodcode='{{item.prodCode}}'>
     <image class="goods-list__item__icon" src="{{item.imageUrl}}?x-oss-process=style/secondMainPic"></image>
     <view class="goods-list__item__status" wx:if="{{item.status==3}}">已售罄</view>
     <view class="goods-list__item__title text-clamp">{{item.prodName}}</view>
     <view class="goods-list__item__footer">
       <view class="goods-list__item__footer__units">¥</view>
       <view class="goods-list__item__footer__price">{{item.vipPrice}}</view>
       <view class="goods-list__item__footer__number">已售{{item.soldNum}}件</view>
     </view>
    </view>
  </view>
  <kc-footer-loading noMore="{{noMore}}" wx:if="{{goodsList.length > 0}}"/>
</view>

<kc-author-modal show="{{needAuthor}}"/>
</view>