.record-list{
 margin-top: 50rpx;
 width: 100%;
 display: flex;
 flex-direction: column;
 align-items: center;
 margin-bottom: 40rpx;

}
.record-list__cell{
 margin-left: 32rpx;
 margin-right: 32rpx;
 width: calc(100vw - 64rpx);
 display: flex;
 background-color: white;
 border-radius: 8rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}
.record-list__cell__top{
 flex:1;
}
.record-list__cell__top__num{
 margin-top: 31rpx;
 margin-left: 26rpx;
 font-size: 30rpx;
 color: #333333;
 font-weight: bold;
 height: 42rpx;
 line-height: 42rpx;
}
.record-list__cell__top__date{
  margin-top: 24rpx;
  margin-left: 26rpx;
  font-size: 24rpx;
  color: #999999;
  height: 33rpx;
  line-height: 33rpx;
}
.record-list__cell__right{
  
}
.record-list__cell__right__price{
  margin-right: 34rpx;
  margin-top: 31rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 36rpx;
  color: #F61B6D;
  font-weight: bold;
}
.record-list__cell__right__status{
  margin-top: 16rpx;
  margin-right: 34rpx;
  font-size: 24rpx;
  color: #999999;
}