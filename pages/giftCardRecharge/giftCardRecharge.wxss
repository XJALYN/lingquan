/* pages/giftCardRecharge/giftCardRecharge.wxss */
@import "./recordList/index";
@import "./errorTip/index";
.page{
  padding-top: 30rpx;
}
.cell{
 margin-top: 20rpx;
 display: flex;
 align-items: center;
 margin-left: 32rpx;
 margin-right: 32rpx;
 width: calc(100% - 64rpx);
 height: 100rpx;
 border-radius: 10rpx;
 background-color: white;
}
.cell__input--error{
 box-shadow:0px 3px 9px 0px rgba(246,27,109,0.59);
 border:1px solid rgba(246,27,109,1)
}

.cell__icon{
  margin-top: 0;
  font-size: 32rpx;
  margin-left: 32rpx;
  width: 42rpx;
  height: 42rpx;
  text-align: center;
  line-height: 42rpx;
}
.cell__input{
 margin-left: 32rpx;
 font-size: 29rpx;
 flex:1;
 margin-right: 30rpx;
}
.cell__input::placeholder{
  color: #999999;
}


.btn-sumit{
 margin-top: 100rpx;
 margin-left: 33rpx;
 margin-right: 33rpx;
 line-height: 100rpx;
 text-align: center;
 height: 100rpx;
 background-color: #F61B6D;
 color: white;
 border-radius: 50rpx;
 font-size: 32rpx;
}
.btn-sumit__tip{
  margin-top: 30rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  color: #999999;
  font-size: 24rpx;
}
.record-header{
  margin-top: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.record-line{
  width: 68rpx;
  height: 1px;
  background-color: #D8D8D8;
}
.record-title{
 font-size: 30rpx;
 color: #333333;
 margin-left: 19rpx;
 margin-right: 10rpx;
 font-weight: bold;
}

.record-no{
  margin-top: 96rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.record-no__image{
  font-size: 150rpx;
  color: #E8E8E8;
}
.recorde-no__title{
 margin-top: 35rpx;
 color: #D4D4D4;
 font-size: 28rpx;
}