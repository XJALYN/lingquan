<!--pages/afterSaleApplay/afterSaleApplay.wxml-->
<import src="./cell/index" />
<view wx:if="{{data}}">
  <view class="detail">
    <!-- 订单号 -->
    <view class="cell">
     <view class="cell__title">订单号:</view>
     <view class="cell__value">{{data.checkoutOrderCode}}</view>
    </view>

    <!-- 退款类型 -->
     <view class="cell">
     <view class="cell__title">退款类型:</view>
     <radio-group class="radio-group" bindchange="onTypeChange">
  <label class="radio-group__radio" wx:for="{{typeList}}" wx:key="{{index}}">
    <radio value="{{index}}"  checked="{{index==typeIndex}}" color="#F61B6D" wx:if="{{index==0}}"/>
    <radio value="{{index}}"  checked="{{index==typeIndex}}" color="#F61B6D" wx:if="{{index==1}}" disabled='{{(data.orderState==60||data.orderState==70)?false:true}}'/>
    <text class="radio-group__radio__text">{{item}}</text>
  </label>
</radio-group>
    </view>
    <view class="cell">
     <view class="cell__title">退款数量:</view>
    </view>
    <view style='margin-top:20rpx;'></view>
    <block wx:for="{{data.refundRecordItems}}" wx:key="{{index}}">
       <template is="cell" data="{{...item,typeIndex,index}}"/>
    </block>
  </view>

  <view class="refund">
    <view class="refund__cell">
      <view class="refund__cell__title">申请退款金额:</view>
      <input wx:if="{{typeIndex==0}}" placeholder='请输入金额(最多¥{{data.amountOrder}},不含运费)' class="refund__cell__value" bindblur='onInputRefundMoney' bindinput="onInputRefundMoney" value='{{data.requestRefundMoney}}' type="digit"></input>
      <view wx:if="{{typeIndex==1}}" class="refund__cell__value">{{data.requestRefundMoney}}</view>
      
    </view>
    <view class="refund__line"></view>
     <view class="refund__cell">
      <view class="refund__cell__title">退款说明:</view>
      <input class="refund__cell__value" bindinput='onInputRemark' placeholder='选填' type="text"></input>
    </view>
  </view>

  <cover-view class="refund-btn" bindtap='onSubmit' wx:if="{{data.requestRefundMoney}}">提交审核</cover-view>
<cover-view class="refund-btn refund-btn---disable"  wx:else>提交审核</cover-view>
</view>
