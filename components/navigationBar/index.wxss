/* components/navigationBar/index.wxss */
@import "../../app.wxss";
.navigation-bar{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 160rpx;
  display: flex;
  align-items: center;
  background: white;
  padding-top:40rpx;
  box-sizing: border-box;
  z-index: 10;
}
.navigation-bar-bg{
  height: 140rpx;
}

.navigation-bar__left{
  display: flex;
  align-items: center;
  background-color: rgba(255,255,255,0.3);
  border: 1px solid #eee;
  margin-left: 20px;
  height: 60rpx;
  border-radius: 30rpx; 
  box-sizing: border-box;
}

.navigation-bar__back{
 width: 40rpx;
 height: 40rpx;
 color: black;
 font-size: 40rpx;
 line-height: 40rpx;
 margin-left: 20rpx;
 text-align: center;
}

.navigation-bar__home{
 width: 40rpx;
 height: 40rpx;
 margin-left: 20rpx;
 color: black;
 font-size: 40rpx;
 line-height: 40rpx;
 margin-right: 20rpx;
}
.navigation-bar__title{
  position: absolute;
  left: 0;
  top: 40rpx;
  height:120rpx;
  right: 0;
  width: 100%;
  line-height: 120rpx;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
  z-index: -1;
}

.navigation-bar__location{
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}
.navigation-bar__location__icon{
  width: 40rpx;
  height: 40rpx;
  color: black;
  font-size: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
.navigation-bar__location__title{
  font-size: 30rpx;
  margin-left: 20rpx;
}