/* components/banner/index.wxss */
.banner-list{
  margin-top:50rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  position: relative;

}
.banner-list__swiper{
  height: 300rpx;
  background: #eee;
  border-radius: 10rpx;
}
.banner-list__item{
  display: block;width: 100%;height: 100%;
  border-radius: 10rpx;

}
.banner-list__dot__list{
  position: absolute;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom:20rpx; 
}
.banner-list__dot__list__item{
  width: 10rpx;
  height: 10rpx;
  background: #D6D6D6;
  margin-right: 4rpx;
  margin-left: 4rpx;
  transition: ease all 0.3s;
  border-radius: 5rpx;
}
.banner-list__dot__list__item--active{
  background: #F61B6D;
  width:24rpx;
}