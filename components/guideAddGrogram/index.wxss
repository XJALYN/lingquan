/* components/guideAddGrogram/index.wxss */
.guide-add-grogram{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,0.2);
  z-index: 10;
}
.guide-add__text{
  color: white;
  width:360rpx;
  height:50rpx;
  border-radius: 25rpx;
  background-color: black;
  text-align: center;
   position: absolute;
   right: 83rpx;
  top: 17rpx;
  font-size: 26rpx;
  line-height: 50rpx;
}
.guide-add__text--red{
  color: #FA3B7B;
}
.guide-add__text::after{
  content: "";
  position: absolute;
  top: -12rpx;
  right: 45rpx;
  width:0; 
  height:0; 
  border-left:15rpx solid transparent;
  border-right:15rpx solid transparent;
  border-bottom:15rpx solid black;
}