@import "../../app.wxss";
.author__bg{
 position: fixed;
 top: 0;
 left: 0;
 right: 0;
 bottom: 0;
 background-color: rgba(0,0,0,0.6);
 display: flex;
 flex-direction: column;
 justify-content: center;
  align-items: center;
  z-index: 100;
}
.author__content{
  width: 520rpx;
  position: relative;
  background-color: white;
  height: 547rpx;
  box-shadow:10rpx 12rpx 44rpx 13rpx rgba(37,65,67,0.9);
  border-radius:20rpx;
  flex-direction: column;
  justify-content: flex-start;
  background: url("https://kshop-pro-data.oss-cn-hangzhou.aliyuncs.com/kmh/home_member_upgrade.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
 
}
.bth-close{
  position: absolute;
  bottom: -116rpx;
  left: 50%;
  width: 48rpx;
  height: 48rpx;
  transform: translateX(-50%);
  text-align: center;
  line-height: 48rpx;
  color: white;
  border-radius: 50%;
  border: 2rpx solid white;
  font-size: 20rpx;
}

