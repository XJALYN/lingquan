.service{
 width: 100%;
 background: white;
 display: flex;
 flex-direction: column;
 margin-top: 20rpx;
 padding-left: 32rpx;
 padding-right: 32rpx;
 box-sizing: border-box;
}
.service__header{
 margin-top: 30rpx;
 display: flex;
 align-items: center;
}
.service__header__icon{
  width: 74rpx;
  height: 74rpx;
  min-width: 74rpx;
  border-radius: 50%;
  background: #eee;
  border:1px solid rgba(246, 27, 109, 1);
  box-sizing: border-box;
}
.service__header__right{
 margin-left: 16rpx;
}
.service__header__right__title{
font-size: 28rpx;
font-weight: bold;
height: 40rpx;
line-height: 40rpx;
}
.service__header__right__desc{
  margin-top: 4rpx;
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
  height: 30rpx;
}
.service__cell{
  margin-top: 44rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.service__celll__title{
 color: rgba(51, 51, 51, 1);
 font-size: 28rpx;
 width: 168rpx;
 margin-right: 44rpx;

}
.btn-submit{
 margin-top: 70rpx;
 width: 100%;
 height: 90rpx;
 line-height: 90rpx;
 text-align: center;
 font-size: 30rpx;
 background: rgba(246, 27, 109, 1);
 color: white;
 border-radius: 45rpx;
}
.btn-tip{
  margin-top: 36rpx;
  font-size: 24rpx;
  color: rgba(51, 51, 51, 1);
  width: 100%;
  text-align: center;
}
.rule-link{
  margin-top: 24rpx;
  color: rgba(246, 27, 109, 1);
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  margin-bottom: 40rpx;
  text-decoration: underline;
}