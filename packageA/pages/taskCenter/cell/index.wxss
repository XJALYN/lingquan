
.cell{
 width: 100%;
 height: 100rpx;
 display: flex;
 align-items: center;
 border-bottom: 1px solid #eee;
 background: white;
}
.cell__title{
 margin-left: 20rpx;
 font-size: 32rpx;
 color: #333;
 flex:1;
}
.cell__integral{
 color: #888;
 font-size: 24rpx;
 margin-right: 20rpx;
}
.cell__btn{
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  background-color: red;
  margin-right: 20rpx;
  color: white;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.cell__btn--invalid{
  background: white;
  color: #aaa;
  border: 1px solid #aaa;
}