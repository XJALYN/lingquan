/* pages/addressAdd/addressAdd.wxss */
@import "./cell/index";
@import "./addressSelectCell/index";
.content{
  margin-top: 40rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  background: white;
  border-radius: 10rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 200rpx;
}
.submit-btn{
  position: fixed;
  bottom: 50rpx;
  left: 40rpx;
  right: 40rpx;
  height: 100rpx;
  color: white;
  font-size: 28rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50rpx;
  z-index: 10;
}
.submit-btn__hover{
  opacity: 0.7;
}
.business-desc{
  margin-top: 10rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  width: calc(100% - 80rpx);
  height: 200rpx;
  font-size: 32rpx;
  border: 1px solid #e8e8e8;
  border-radius: 8rpx;
  padding: 20rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
}
.business-desc__placehold{
   font-size: 32rpx;
   color: #CCCCCC;
}
.add-title{
    margin-top: 45rpx;
  font-size: 24rpx;
  color: #999;
  margin-left: 40rpx;
  font-weight: normal;
}
.add-icon{
  margin-top: 20rpx;
  width: 120rpx;
  height: 120rpx;
  margin-left: 40rpx;
  background-color: #eee;
}